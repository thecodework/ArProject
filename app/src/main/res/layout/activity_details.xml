<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_new"
        tools:context=".DetailsActivity">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginTop="@dimen/space_12"
            android:src="@drawable/backgreybutton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_300"
            android:layout_marginHorizontal="@dimen/space_12"
            android:layout_marginTop="@dimen/space_16"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/space_16"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageBack">

            <ImageView
                android:id="@+id/imageItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bedimage" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="@dimen/space_32"
            android:layout_height="@dimen/space_32"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginRight="@dimen/space_40"
            android:background="@drawable/heartback"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardImage"
            app:layout_goneMarginRight="@dimen/space_60">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_4"
                android:src="@drawable/heart" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardImage">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardImage">

                <TextView
                    android:id="@+id/tvItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Comfy Sofa"
                    android:textColor="@color/Brown"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/rBar"
                        style="@android:style/Widget.Material.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:numStars="5"
                        android:progressTint="@color/yellow"
                        android:rating="4"
                        android:stepSize="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_light"
                        android:text="200"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btnAR"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_32"
                android:layout_gravity="center_vertical"
                android:background="@drawable/buttonback"
                android:fontFamily="@font/poppins_semibold"
                android:padding="@dimen/space_8"
                android:text=" View in AR "
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Add to Cart"
                    android:textColor="@color/Brown"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_24"
                    android:background="@drawable/whitegreyback"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/space_12"
                        android:src="@drawable/minus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="@dimen/space_12"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="1"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="@dimen/space_8"
                        android:layout_height="@dimen/space_8"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/space_12"
                        android:src="@drawable/plus" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:fontFamily="@font/poppins_bold"
                android:text="$750"
                android:textColor="@color/black_text"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/space_4"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_12"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="+ 2 colors"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:scaleType="centerCrop"
                android:src="@drawable/greycircle" />

            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_8"
                android:scaleType="centerCrop"
                android:src="@drawable/redcircle" />

            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_8"
                android:scaleType="centerCrop"
                android:src="@drawable/greencircle" />

            <ImageView
                android:layout_width="@dimen/space_12"
                android:layout_height="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_12"
                android:scaleType="centerCrop"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>