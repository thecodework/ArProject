<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/furnish_ar"
        android:fontFamily="@font/postnobillscolombo_bold"
        android:gravity="center"
        android:layout_marginTop="180dp"
        android:textColor="@color/Brown"
        android:textSize="36sp"/>
    <TextView
        android:textColor="@color/white_new"
        android:layout_width="match_parent"
        android:text="@string/innovation_lab"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:padding="2dp"
        android:textSize="18sp"
        android:gravity="center"
        android:shadowColor="@color/OffWhite"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="1.8" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_meets_lifestyle"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:textColor="@color/Brown"
        android:textSize="16sp"/>

</LinearLayout>