<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llLoginActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvfurnish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_110"
            android:fontFamily="@font/postnobillscolombo_bold"
            android:gravity="center"
            android:text="@string/furnish_ar"
            android:textColor="@color/Brown"
            android:textSize="@dimen/text_36" />

        <TextView
            android:id="@+id/tvInnovation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:padding="@dimen/space_2"
            android:shadowColor="@color/dark_gray"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="1.8"
            android:text="@string/innovation_lab"
            android:textColor="#000000"
            android:textSize="@dimen/text_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/continue_with"
                android:textColor="@color/white_new"
                android:textSize="@dimen/text_26" />

            <ImageView
                android:id="@+id/imgGoogle"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:layout_marginLeft="@dimen/space_8"
                android:src="@drawable/google_icon" />

            <TextView
                android:id="@+id/tvOr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:text="@string/or"
                android:textColor="@color/white_new"
                android:textSize="@dimen/text_26" />

            <ImageView
                android:id="@+id/imgFacebook"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:layout_marginLeft="@dimen/space_8"
                android:src="@drawable/icon_facebook" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvOr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center"
            android:text="@string/or"
            android:textColor="@color/white_new"
            android:textSize="@dimen/text_26" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_20"
            android:background="@drawable/ic_round_button"
            android:hint="@string/enter_email"
            android:padding="@dimen/space_16"
            android:textColorHint="@color/white_new"
            android:textSize="@dimen/text_22" />

        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:background="@drawable/ic_round_button"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:padding="@dimen/space_16"
            android:textColorHint="@color/white_new"
            android:textSize="@dimen/text_22" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_30"
            android:background="@drawable/ic_login_button"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="@dimen/space_45"
            android:paddingTop="@dimen/space_5"
            android:paddingRight="@dimen/space_45"
            android:paddingBottom="@dimen/space_5"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white_new"
            android:textSize="@dimen/text_16" />

    </LinearLayout>
</layout>