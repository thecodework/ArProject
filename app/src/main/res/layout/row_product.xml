<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="modelCategory"
            type="debsin.thecodework.arfurniture.model.ModelCategory" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:elevation="@dimen/space_4"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/space_10">

            <ImageView
                android:id="@+id/imageItem"
                android:layout_width="@dimen/space_160"
                android:layout_height="@dimen/space_130"
                android:scaleType="centerCrop"
                android:src="@drawable/bedimage"
                app:imageResource="@{modelCategory.categoryimage}" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>